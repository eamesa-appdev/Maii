<div>
  <div>
    <h1>
      Favorito #<%= @the_participacion.fund.nombre_fondo%> details
    </h1>

    <div>
      <div>
        <a href="/favoritos">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_favorito/<%= @the_favorito.id %>">
          Delete favorito
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Participacion
      </dt>
      <dd>
        <%= @the_favorito.participacion_id %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <%= @the_favorito.user_id %>
      </dd>

      <dt>
        Exit date
      </dt>
      <dd>
        <%= @the_favorito.exit_date %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_favorito.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_favorito.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit favorito
    </h2>

    <form action="/modify_favorito/<%= @the_favorito.id %>"  method="post" >
      <div>
        <label for="participacion_id_box">
          Participacion
        </label>

        <input type="text" id="participacion_id_box" name="query_participacion_id" value="<%= @the_favorito.participacion_id %>">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_favorito.user_id %>">
      </div>

      <div>
        <label for="exit_date_box">
          Exit date
        </label>

        <input type="date" id="exit_date_box" name="query_exit_date" value="<%= @the_favorito.exit_date %>">
      </div>

      <button>
        Update favorito
      </button>
    </form>
  </div>
</div>

<hr>
