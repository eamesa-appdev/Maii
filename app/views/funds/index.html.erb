<div>
  <div>
    <h1>
      List of all funds
    </h1>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Nombre fondo
        </th>

        <th>
          Administradora
        </th>

        <th>
          Tipo fondo
        </th>

        <th>
          Codigo tipo fondo
        </th>

        <th>
          Tipo participaciones count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_funds.each do |a_fund| %>
      <tr>
        <td>
          <%= a_fund.id %>
        </td>

        <td>
          <%= a_fund.nombre_fondo %>
        </td>

        <td>
          <%= a_fund.administradora_id %>
        </td>

        <td>
          <%= a_fund.tipo_fondo %>
        </td>

        <td>
          <%= a_fund.codigo_tipo_fondo %>
        </td>

        <td>
          <%= a_fund.tipo_participaciones_count %>
        </td>

        <td>
          <%= time_ago_in_words(a_fund.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_fund.updated_at) %> ago
        </td>

        <td>
          <a href="/funds/<%= a_fund.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
